<div id="users-list">
  <% for (var i = 0; i < users.length; i++) { %>
    <div class="user">
      <img src="/images/person.jpg" width="100" height="100" />
      <div class="user-info">
        <div class="user-username"><%- users[i].username %></div>
        <div class="user-email"><%- users[i].email %></div>
      </div>
    </div>
  <% } %>
  <div class="user-invites">
  Invited users:
  <ul>
    <% tokens.each(function(token) { %>
    <li><%- token.get('email') %></li>
    <% }) %>
  </ul>
  </div>
  <form method="post" accept-charset="utf-8">
    <label for="name">Add user by email address:</label>
    <input type="text" name="name" value="" id="name" />
    <input type="submit" value="&rarr;" />
  </form>
</div>